generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String    @default("BUSINESS") // ADMIN | BUSINESS
  business  Business?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Business {
  id        Int       @id @default(autoincrement())
  name      String
  user      User      @relation(fields: [userId], references: [id])
  userId    Int       @unique
  qrs       QrCode[]
  plan      String    @default("FREE") // FREE | PRO
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model QrCode {
  id           Int           @id @default(autoincrement())
  uuid         String        @unique
  title        String
  type         String        // MENU | LINK | CAMPAIGN
  config       String        // JSON string, type-specific data
  svgData      String?
  pngData      String?
  color        String?       // hex
  logoUrl      String?
  business     Business      @relation(fields: [businessId], references: [id])
  businessId   Int
  scans        ScanEvent[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model ScanEvent {
  id        Int      @id @default(autoincrement())
  qr        QrCode   @relation(fields: [qrId], references: [id])
  qrId      Int
  device    String   // MOBILE | DESKTOP
  userAgent String?
  createdAt DateTime @default(now())
}

